---
import { Icon } from 'astro-icon/components'

const currentYear = new Date().getFullYear();

const navLinks = [
  { href: "/", text: "About me" },
  { href: "/projects", text: "My Projects" },
  { href: "/blog", text: "My Blog" },
  { href: "/contact", text: "Get in touch" },
];

const otherWebsites = [
  {
    href: "",
    text: "Soon...",
    target: "",
  },
];
---

<footer class="w-full py-8 bg-neutral-950 text-zinc-300">
  <div class="max-w-6xl mx-auto px-4">
    <div
      class="group relative border-2 border-zinc-700 hover:border-zinc-400 p-6 sm:p-8"
    >
      <span
        class="absolute -top-4 left-6 px-2 bg-neutral-950 text-zinc-500 text-md font-semibold group-hover:text-zinc-300"
      >
        footer
      </span>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12 mb-12"
      >
        <div>
          <h4 class="text-xl font-semibold text-zinc-300 mb-2">
            Site Navigation
          </h4>
          <ul class="space-y-2.5">
            {
              navLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-zinc-400 hover:text-zinc-100 text-md"
                  >
                    {link.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h4 class="text-xl font-semibold text-zinc-200 mb-2">
            My Other Sites
          </h4>
          <ul class="space-y-2.5">
            {
              otherWebsites.map((site) => (
                <li>
                  <a
                    href={site.href}
                    target={site.target || "_self"}
                    rel={
                      site.target === "_blank"
                        ? "noopener noreferrer"
                        : undefined
                    }
                    class="text-zinc-400 hover:text-zinc-100 text-md"
                  >
                    {site.text}
                    {site.target === "_blank" && (
                      <span
                        class="ml-1.5 text-xs opacity-60"
                        aria-hidden="true"
                      >
                        â†—
                      </span>
                    )}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="sm:col-span-2 lg:col-span-1">
          <h4 class="text-xl font-semibold text-zinc-300 mb-3">Social Media</h4>
          <div class="flex flex-wrap space-x-5 space-y-4 mb-4">
            <a
            href="https://www.github.com/thetrueferret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="GitHub"
          >
            <Icon name="line-md:github-loop" size={48} />
          </a>
          
          <a
            href="https://www.youtube.com/@trueferret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="YouTube"
          >
            <Icon name="line-md:youtube-filled" size={48} />
          </a>
          
          <a
            href="https://twitter.com/trueferret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter/X"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="Twitter/X"
          >
            <Icon name="line-md:twitter-filled" size={48} />
          </a>
          
          <a
            href="https://open.spotify.com/user/kt8vvrzng27mfuj63gc4aloos?si=86804afbff604073"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Spotify"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="Spotify"
          >
            <Icon name="line-md:spotify" size={48} />
          </a>
          
          <a
            href="https://www.tiktok.com/@trueferret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="TikTok"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="TikTok"
          >
            <Icon name="line-md:tiktok" size={48} />
          </a>
          
          <a
            href="https://bsky.app/profile/trueferret.bsky.social"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Bluesky"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="Bluesky"
          >
            <Icon name="line-md:bluesky" size={48} />
          </a>
          
          <a
            href="https://instagram.com/trueferret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="Instagram"
          >
            <Icon name="line-md:instagram" size={48} />
          </a>
          
          <a
            href="https://linkedin.com/in/jarno-fret"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="text-zinc-500 hover:text-zinc-100 block w-12 h-12"
            title="LinkedIn"
          >
            <Icon name="line-md:linkedin" size={48} />
          </a>
          </div>
        </div>
      </div>

      {/* Copyright Information */}
      <div class="border-t-2 border-zinc-700 pt-6 text-center">
        <p class="text-sm text-zinc-500">
          &copy; {currentYear} Your Name / Your Brand. All rights reserved.
        </p>
        <p class="text-sm text-zinc-600 mt-1">Made with Astro</p>
      </div>
    </div>
  </div>
</footer>
