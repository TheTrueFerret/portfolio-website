<header class="w-full py-6">
  <div class="max-w-6xl mx-auto px-4 grid grid-cols-4 sm:grid-cols-5 gap-5">

    <!-- Navbar Section -->
    <nav class="group relative col-span-4 sm:col-start-1 sm:col-span-4 border-2 border-zinc-700 hover:border-zinc-400 transition-all">
      <span class="absolute -top-4 left-6 px-2 bg-neutral-900 text-zinc-500 text-md font-semibold group-hover:text-zinc-300 transition-colors">navbar</span>
      <div class="grid grid-cols-4 gap-0 text-center text-white text-md sm:text-2xl">
        <a href="/" class="hover:text-zinc-500 transition-color p-4 sm:p-6">about</a>
        <a href="/projects/" class="hover:text-zinc-500 transition-colors p-4 sm:p-6">projects</a>
        <a href="/blog/" class="hover:text-zinc-500 transition-colors p-4 sm:p-6">blog</a>
        <a href="/contact/" class="hover:text-zinc-500 transition-colors p-4 sm:p-6">contact</a>
      </div>
    </nav>

    <!-- Theme Toggle Section -->
    <div class="group relative col-span-4 sm:col-start-5 sm:col-span-1 border-2 border-zinc-700 hover:border-zinc-400 transition-all">
      <span class="absolute -top-4 left-6 px-2 bg-neutral-900 text-zinc-500 text-md font-semibold group-hover:text-zinc-300 transition-colors">theme</span>
      <div class="h-full flex items-center justify-center">
        <button id="themeToggle" class="w-10 h-10" aria-label="Toggle theme">
          <svg class="h-full w-full hover:text-zinc-500 transition-colors" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path fill="currentColor" d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2S2 6.477 2 12s4.477 10 10 10m0-2V4a8 8 0 1 1 0 16" />
          </svg>
        </button>
      </div>
    </div>

  </div>
</header>
